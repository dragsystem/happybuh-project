<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView 
        android:id="@+id/titulo_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personaliza tus gafas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
   	<ImageButton 
   	    android:id="@+id/body_volver"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
   	    android:layout_below="@id/titulo_body"
   	    android:src="@drawable/menu_volver"
   	    android:background="@android:color/transparent"
   	    android:onClick="volver"/>
   	
   	<ImageButton
   		android:id="@+id/img_glass_3"
   	    android:layout_height="wrap_content"
   	    android:layout_width="wrap_content"
   	    android:layout_below="@id/titulo_body"
   	    android:layout_alignParentRight="true"
   	    android:src="@drawable/b_gafas3"
   	    android:onClick="cambio_gafas3"
   	    android:background="@android:color/transparent"
   	    android:layout_marginLeft="5dp"
   	    android:layout_marginRight="5dp"/>
   	<ImageButton 
   		android:id="@+id/img_glass_2"
   	    android:layout_height="wrap_content"
   	    android:layout_width="wrap_content"
   	    android:layout_toLeftOf="@id/img_glass_3"
   	    android:layout_below="@id/titulo_body"
   	    android:src="@drawable/b_gafas2"
   	    android:onClick="cambio_gafas2"
   	    android:background="@android:color/transparent"
   	    android:layout_marginLeft="5dp"
   	    android:layout_marginRight="5dp"/>
   	<ImageButton 
   		android:id="@+id/img_glass_1"
   	    android:layout_height="wrap_content"
   	    android:layout_width="wrap_content"
   	    android:layout_toLeftOf="@id/img_glass_2"
   	    android:layout_below="@id/titulo_body"
   	    android:src="@drawable/b_gafas1"
   	    android:onClick="cambio_gafas1"
   	    android:background="@android:color/transparent"
   	    android:layout_marginLeft="5dp"
   	    android:layout_marginRight="5dp"/>
   	
   	
   	<TextView
   	    android:id="@+id/requisitos"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:text="@string/reques"
   	    android:layout_below="@id/img_glass_1"
   	    android:layout_alignParentRight="true"
   	    android:visibility="visible"
   	    android:layout_marginTop="20dp"
   	    android:layout_marginLeft="20dp"
   	    android:textStyle="bold"/>
   	
   	<TextView 
   	    android:id="@+id/glass_lvlreq"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="Level Requerido:"
   	    android:layout_alignParentLeft="true"
   	    android:layout_below="@id/requisitos"
   	    android:layout_marginTop="20dp"
   	    android:layout_marginLeft="20dp"/>
   	
   	<TextView
   	    android:id="@+id/glass_lvlreq_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="0"
   	    android:textStyle="bold"
   	    android:layout_below="@id/glass_lvlreq"
   	    android:layout_alignRight="@id/glass_lvlreq"/>
   	
   	<TextView 
   	    android:id="@+id/glass_lvl"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="Nivel Actual:"
   	    android:layout_below="@id/requisitos"
   	    android:layout_alignParentRight="true"
   	    android:layout_marginRight="20dp"
   	    android:layout_marginTop="20dp"/>
   	
   	<TextView 
   	    android:id="@+id/glass_lvl_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@id/glass_lvl"
   	    android:text="1"
   	    android:layout_alignRight="@id/glass_lvl"
   	    android:textStyle="bold"/>
   	
   	<TextView 
   	    android:id="@+id/glass_coins"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="Coins Disponibles:"
   	    android:layout_below="@id/glass_lvl_et"
   	    android:layout_alignParentRight="true"
   	    android:layout_marginRight="20dp"/>
   	
   	<TextView 
   	    android:id="@+id/glass_coins_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="100"
   	    android:layout_below="@id/glass_coins"
   	    android:layout_alignRight="@id/glass_coins"
   	    android:textStyle="bold"/>
   	
   	<TextView 
   	    android:id="@+id/glass_price"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="Precio:"
   	    android:layout_below="@id/glass_lvlreq_et"
   	    android:layout_alignLeft="@id/glass_lvlreq"/>
   	
   	<TextView
   	    android:id="@+id/glass_price_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="0"
   	    android:layout_below="@id/glass_price"
   	    android:layout_alignRight="@id/glass_lvlreq_et"
   	    android:textStyle="bold"/>
   	
   	<ImageButton 
   	    android:id="@+id/glass_buy_bought"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/comprar"
   	    android:background="@android:color/transparent"
   	    android:layout_alignLeft="@id/glass_lvlreq"
   	    android:layout_below="@id/glass_price_et"/>
   	
   	<ImageView 
   	    android:id="@+id/buh_body_change"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/buh_blue"
   	    android:layout_below="@id/glass_buy_bought"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="20dp"
   	    />
   	
   	<ImageView
   	    android:id="@+id/buh_glasses_change"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignTop="@id/buh_body_change"
   	    android:layout_alignLeft="@id/buh_body_change"
   	    android:src="@drawable/gafas_1_0" 
   	    android:visibility="invisible"/>
   	
   	<ImageView
   	    android:id="@+id/buh_glasses_beard"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignTop="@id/buh_body_change"
   	    android:layout_alignLeft="@id/buh_body_change"
   	    android:src="@drawable/barba_1_0" 
   	    android:visibility="invisible"/>
   	
   	
   	<LinearLayout
   	    android:id="@+id/layout_glass_colores"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:weightSum="1.0"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="20dp">
    
   	    <Button 
   	        android:id="@+id/body_boton_azul"
   	    	android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:layout_weight=".20"
   	    	android:text="Azul"
   	    	android:background="@drawable/bg_button_azul"
   	    	android:textSize="15dp"
   	    	android:onClick="cambio_color_azul"
   	    />
   	    
   	    <Button 
   	        android:id="@+id/body_boton_verde"
   	    	android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:layout_weight=".20"
   	    	android:text="Verde"
   	    	android:background="@drawable/bg_button_verde"
   	    	android:textSize="15dp"
   	    	android:onClick="cambio_color_verde"
   	    />
	   	<Button 
	   	    android:id="@+id/body_boton_amarillo"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight=".20"
	   	    android:text="Amarillo"
	   	    android:background="@drawable/bg_button_amarillo"
	   	    android:textSize="15dp"
	   	    android:onClick="cambio_color_amarillo"
	   	    />
	   	<Button 
	   	    android:id="@+id/body_boton_rojo"
	   	    android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:layout_weight=".20"
	   	    android:text="Rojo"
	   	    android:background="@drawable/bg_button_rojo"
	   	    android:textSize="15dp"
	   	    android:onClick="cambio_color_rojo"
	   	    />
	   	<Button 
	   	   	android:id="@+id/body_boton_negro"
	   	    android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:layout_weight=".20"
	   	    android:text="Negro"
	   	    android:background="@drawable/bg_button_negro"
	   	    android:textSize="15dp"
	   	    android:onClick="cambio_color_negro"
	   	    />

    </LinearLayout>
</RelativeLayout>
